{
  "name": "rest-api-nodejs-mongodb",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "start": "node --loader ts-node/esm index.ts",
    "server": "nodemon src/index.ts",
    "deploy": "cd client && npm run build && cd.. && firebase deploy",
    "testDeploy": "cd client && npm run build && cd.. && firebase hosting:channel:deploy testingDeploy",
    "dev": "cd client && npm run build && npm run dev",
    "test": "nyc _mocha --timeout 10000 --exit --report lcovonly -- -R spec",
    "lint": "eslint --fix --config .eslintrc.json \"**/*.js\""
  },
  "type": "commonjs",
  "dependencies": {
    "@types/express": "^4.17.13",
    "body-parser": "^1.19.2",
    "cookie-parser": "~1.4.3",
    "cors": "^2.8.5",
    "debug": "~2.6.9",
    "dotenv": "^8.2.0",
    "express": "~4.16.0",
    "firebase": "^9.6.6",
    "jsonwebtoken": "^8.5.1",
    "mocha-lcov-reporter": "^1.3.0",
    "mongoose": "^6.2.1",
    "morgan": "~1.9.0",
    "nodemailer": "^6.3.1",
    "standard": "^16.0.4"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "eslint": "^6.5.1",
    "mocha": "^6.2.2",
    "nodemon": "^1.19.4",
    "nyc": "^14.1.1",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "typescript": "^4.5.5"
  }
}
